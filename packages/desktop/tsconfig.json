{
  "compilerOptions": {
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node16",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2021",
    "jsx": "react-jsx",
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
}